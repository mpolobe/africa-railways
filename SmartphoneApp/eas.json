{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "API_URL": "http://localhost:8080",
        "SUI_NETWORK": "localnet"
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "API_URL": "https://8080-${GITPOD_WORKSPACE_ID}.${GITPOD_WORKSPACE_CLUSTER_HOST}",
        "SUI_NETWORK": "testnet"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "API_URL": "https://api.africarailways.com",
        "SUI_NETWORK": "mainnet"
      }
    }
  },
  "submit": {
    "production": {}
  }
}

