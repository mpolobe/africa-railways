{
  "cli": {
    "version": ">= 10.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true
    },
    "railways": {
      "extends": "production",
      "env": {
        "APP_VARIANT": "railways",
        "BACKEND_URL": "$BACKEND_URL",
        "API_KEY": "$RAILWAYS_API_KEY"
      }
    },
    "africoin": {
      "extends": "production",
      "env": {
        "APP_VARIANT": "africoin",
        "BACKEND_URL": "$BACKEND_URL",
        "API_KEY": "$AFRICOIN_API_KEY"
      }
    }
  }
}
